### Global Nav ###
keybind = ctrl+w=close_surface

### Splits ###
# Split creation
keybind = ctrl+shift+right=new_split:right
keybind = ctrl+shift+left=new_split:left
keybind = ctrl+shift+up=new_split:up
keybind = ctrl+shift+down=new_split:down

# Split navigation - consistent with arrows
keybind = ctrl+alt+right=goto_split:right
keybind = ctrl+alt+left=goto_split:left
keybind = ctrl+alt+up=goto_split:up
keybind = ctrl+alt+down=goto_split:down

# Split resizing 
keybind = ctrl+shift+alt+right=resize_split:right,10
keybind = ctrl+shift+alt+left=resize_split:left,10
keybind = ctrl+shift+alt+up=resize_split:up,10
keybind = ctrl+shift+alt+down=resize_split:down,10

### Tabs ###
# Tab creation and closing
keybind = ctrl+shift+t=new_tab

# Tab navigation
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+tab=next_tab

keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5

# Tab titles and management
keybind = ctrl+shift+comma=move_tab:-1
keybind = ctrl+shift+period=move_tab:+1

### Misc ### 
maximize = true
term = xterm
clipboard-read = allow
clipboard-write = allow
copy-on-select = true
cursor-style = underline
font-size = 16

clipboard-paste-protection = true
clipboard-paste-bracketed-safe = true
window-padding-x = 4
window-padding-y = 4
window-save-state = always

